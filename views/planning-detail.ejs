<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plan Details - VME App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <main class="container my-5" style="max-width: 900px;">
        <header class="page-header">
            <div>
                <h1>Plan Details</h1>
                <p class="text-muted">
                    Reviewing plan submitted by: <strong><%= plan.user.firstName %> <%= plan.user.lastName %></strong>
                </p>
            </div>
            <a href="/planning/history" class="btn btn-secondary">Back to History</a>
        </header>

        <div class="card mb-4">
            <div class="card-body">
                <% if (planType === 'daily') { %>
                    <h4 class="card-title">Daily Call Plan for <%= new Date(plan.planDate).toLocaleDateString() %></h4>
                    <p><strong>First Client Call:</strong> <%= plan.firstClientCall %></p>
                    <p><strong>Areas to Visit:</strong> <%= plan.areasToVisit %></p>
                    <hr>
                    <h5>Places to Visit:</h5>
                    <ul><% plan.placesToVisit.forEach(place => { %><li><%= place %></li><% }) %></ul>
                    <hr>
                    <h5>Sales Objectives:</h5>
                    <ul><% plan.salesObjectives.forEach(obj => { %><li><%= obj %></li><% }) %></ul>

                <% } else { %>
                    <h4 class="card-title">Weekly Itinerary for <%= new Date(plan.weekStartDate).toLocaleDateString() %></h4>
                    <p>Details for the weekly itinerary will be displayed here.</p>
                <% } %>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Management Comments</h5>
            </div>
            <div class="card-body">
                <% if(plan.comments && plan.comments.length > 0) { %>
                    <% plan.comments.forEach(comment => { %>
                        <div class="d-flex mb-3">
                            <img src="<%= comment.user.profilePicture %>" class="rounded-circle me-3" width="40" height="40">
                            <div>
                                <strong><%= comment.user.firstName %> <%= comment.user.lastName %></strong>
                                <small class="text-muted ms-2"><%= new Date(comment.createdAt).toLocaleString() %></small>
                                <p class="mb-0"><%= comment.text %></p>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-muted">No comments yet.</p>
                <% } %>
            </div>
            <div class="card-footer">
                <form action="/planning/comment" method="POST">
                    <input type="hidden" name="planId" value="<%= plan._id %>">
                    <input type="hidden" name="planType" value="<%= planType %>">
                    <div class="input-group">
                        <input type="text" name="text" class="form-control" placeholder="Write a comment..." required>
                        <button type="submit" class="btn btn-primary">Post Comment</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</body>
</html>