<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage My Entries - VME App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <main class="container my-5">
        <header class="page-header">
            <div>
                <h1>Manage My Entries</h1>
                <p class="text-muted">View and delete the private hospitals and doctors you have added.</p>
            </div>
        </header>

        <div class="row g-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">My Hospitals</h5>
                    </div>
                    <ul class="list-group list-group-flush" id="hospital-list">
                        <% if(myHospitals.length > 0) { %>
                            <% myHospitals.forEach(h => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center" data-id="<%= h._id %>">
                                    <%= h.name %>
                                    <button class="btn btn-sm btn-outline-danger delete-hospital-btn">Delete</button>
                                </li>
                            <% }) %>
                        <% } else { %>
                            <li class="list-group-item text-muted">You have not added any private hospitals.</li>
                        <% } %>
                    </ul>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">My Doctors</h5>
                    </div>
                    <ul class="list-group list-group-flush" id="doctor-list">
                        <% if(myDoctors.length > 0) { %>
                            <% myDoctors.forEach(d => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center" data-id="<%= d._id %>">
                                    <div>
                                        <strong><%= d.name %></strong><br>
                                        <small class="text-muted"><%= d.hospital.name %></small>
                                    </div>
                                    <button class="btn btn-sm btn-outline-danger delete-doctor-btn">Delete</button>
                                </li>
                            <% }) %>
                        <% } else { %>
                             <li class="list-group-item text-muted">You have not added any private doctors.</li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('click', async (e) => {
            if (e.target.classList.contains('delete-hospital-btn')) {
                const li = e.target.closest('li');
                const id = li.dataset.id;
                if (confirm('Are you sure? This will also delete all doctors you added for this hospital.')) {
                    try {
                        const res = await fetch(`/api/hospitals/${id}`, { method: 'DELETE' });
                        if (res.ok) {
                            li.remove();
                            // We may need to refresh the doctor list as well
                            window.location.reload(); 
                        } else {
                            alert('Failed to delete.');
                        }
                    } catch (err) {
                        alert('An error occurred.');
                    }
                }
            }
            if (e.target.classList.contains('delete-doctor-btn')) {
                const li = e.target.closest('li');
                const id = li.dataset.id;
                if (confirm('Are you sure?')) {
                     try {
                        const res = await fetch(`/api/doctors/${id}`, { method: 'DELETE' });
                        if (res.ok) {
                            li.remove();
                        } else {
                            alert('Failed to delete.');
                        }
                    } catch (err) {
                        alert('An error occurred.');
                    }
                }
            }
        });
    </script>
</body>
</html>