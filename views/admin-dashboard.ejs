<!DOCTYPE html>
<html lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta charset="UTF-8">
  <title>VME Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <h1>Admin Dashboard</h1>

    <h2 data-bs-toggle="collapse" data-bs-target="#userManagement" style="cursor: pointer;" class="mt-4">
      User Management <span class="badge bg-primary">Click to Toggle</span>
    </h2>
    <div id="userManagement" class="collapse show">
      <input type="text" id="userSearch" class="form-control mb-2" placeholder="Search User by Username">
      <table class="table table-striped" id="userTable">
        <thead>
          <tr>
            <th>Username</th>
            <th>Role</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr data-username="<%= user.username.toLowerCase() %>">
              <td><%= user.username %></td>
              <td><%= user.role %></td>
              <td>
                <form action="/admin/assign-role" method="POST" class="d-flex">
                  <input type="hidden" name="userId" value="<%= user._id %>">
                  <select name="role" class="form-select me-2">
                    <option value="Pending" <%= user.role === 'Pending' ? 'selected' : '' %>>Pending</option>
                    <option value="MSR" <%= user.role === 'MSR' ? 'selected' : '' %>>MSR</option>
                    <option value="KAS" <%= user.role === 'KAS' ? 'selected' : '' %>>KAS</option>
                    <option value="Accounting" <%= user.role === 'Accounting' ? 'selected' : '' %>>Accounting</option>
                  </select>
                  <button type="submit" class="btn btn-primary">Assign</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <h2 class="mt-4">Check-Ins of MSR and KAS</h2>
    <input type="text" id="checkinSearch" class="form-control mb-2" placeholder="Search Check-Ins by User or Activity">
    <div class="table-scroll-container">
      <div class="table-responsive">
        <table class="table table-striped" id="checkinTable">
          <thead>
            <tr>
              <th>Profile Picture</th>
              <th>User</th>
              <th>Hospital</th>
              <th>Doctor</th>
              <th>Activity</th>
              <th>Proof</th>
              <th>Location</th>
              <th>Timestamp</th>
            </tr>
          </thead>
          <tbody>
            <% checkins.forEach(checkin => { %>
              <tr data-search="<%= checkin.user.username.toLowerCase() %> <%= checkin.activity.toLowerCase() %>">
                <td><img src="<%= checkin.user.profilePicture || '/default-profile.png' %>" alt="Profile" width="50" class="rounded-circle"></td>
                <td><%= checkin.user.username %></td>
                <td><%= checkin.hospital.name %></td>
                <td><%= checkin.doctor.name %></td>
                <td><%= checkin.activity %></td>
                <td><% if (checkin.proof) { %><img src="<%= checkin.proof %>" alt="Proof" width="100"><% } else { %>No Proof<% } %></td>
                <td>Lat <%= checkin.location.lat %>, Lng <%= checkin.location.lng %></td>
                <td><%= new Date(checkin.location.timestamp).toLocaleString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <h2 class="mt-4">Orders of MSR and KAS</h2>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>User</th>
            <th>Customer</th>
            <th>Status</th>
            <th>Timestamp</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td><%= order.user.username %></td>
              <td><%= order.customerName %></td>
              <td><%= order.status %></td>
              <td><%= new Date(order.timestamp).toLocaleString() %></td>
              <td><a href="/order/<%= order._id %>">View</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <h2 class="mt-4">Collections of MSR and KAS</h2>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>User</th>
            <th>Type</th>
            <th>File</th>
            <th>Timestamp</th>
          </tr>
        </thead>
        <tbody>
          <% collections.forEach(col => { %>
            <tr>
              <td><%= col.user.username %></td>
              <td><%= col.type %></td>
              <td><a href="<%= col.file %>">View</a></td>
              <td><%= new Date(col.timestamp).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <h2 class="mt-4">Real-Time Locations</h2>
    <div id="map" style="height: 400px;"></div>
    <ul id="locations" class="list-unstyled mt-2">
      <% users.forEach(user => { %>
        <li id="user-<%= user._id %>">
          <%= user.username %>: Lat <%= user.location?.lat || 'N/A' %>, Lng <%= user.location?.lng || 'N/A' %>
        </li>
      <% }) %>
    </ul>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  
  <script>
  const initialUsers = <%- JSON.stringify(users) %>;

  </script>

  <script>
    // --- MAP JAVASCRIPT ---
    const socket = io();
    const map = L.map('map').setView([12.8, 121.7], 6); // Centered on the Philippines
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);
    const markers = {};

    // ** NEW **: Add markers for users with existing locations on page load
    initialUsers.forEach(user => {
      if (user.location && user.location.lat && user.location.lng) {
        const lat = user.location.lat;
        const lng = user.location.lng;
        // Create marker and add a popup with the username
        markers[user._id] = L.marker([lat, lng])
          .addTo(map)
          .bindPopup(user.username);
      }
    });
    
    // Listen for real-time updates
    socket.on('locationUpdate', ({ userId, lat, lng }) => {
      const userListItem = document.getElementById(`user-${userId}`);
      if (userListItem) {
        userListItem.innerHTML = `${userListItem.innerText.split(':')[0]}: Lat ${lat}, Lng ${lng}`;
      }

      if (markers[userId]) {
        markers[userId].setLatLng([lat, lng]);
      } else {
        // Find username from the initial list to create a new marker
        const user = initialUsers.find(u => u._id === userId);
        const username = user ? user.username : 'New User';
        markers[userId] = L.marker([lat, lng])
          .addTo(map)
          .bindPopup(username);
      }
    });

    // --- SEARCH FILTER JAVASCRIPT ---
    document.getElementById('userSearch').addEventListener('input', e => {
      const filter = e.target.value.toLowerCase();
      document.querySelectorAll('#userTable tbody tr').forEach(tr => {
        tr.style.display = tr.dataset.username.includes(filter) ? '' : 'none';
      });
    });

    document.getElementById('checkinSearch').addEventListener('input', e => {
      const filter = e.target.value.toLowerCase();
      document.querySelectorAll('#checkinTable tbody tr').forEach(tr => {
        tr.style.display = tr.dataset.search.includes(filter) ? '' : 'none';
      });
    });
  </script>
</body>
</html>