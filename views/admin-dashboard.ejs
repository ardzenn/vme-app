<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin Dashboard - VME App</title>
    <%- include('partials/header-meta') %>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>
</head>
<body data-user-id="<%= currentUser._id %>">

    <%- include('partials/navbar') %>

    <main class="container-fluid" style="padding: 0 2rem;">
        <header class="page-header">
            <div>
                <h1 style="font-size: 1.875rem;">Admin Dashboard</h1>
                <p style="margin: 0;">System overview and management.</p>
            </div>
            <div class="d-flex align-items-center gap-2">
                <a href="/analytics" class="btn btn-warning">View Analytics</a>
                <a href="/products" class="btn btn-dark">View Product Gallery</a>
            </div>
        </header>

        <% if (locals.success_msg && success_msg.length > 0) { %><div class="alert alert-success"><%= success_msg %></div><% } %>
        <% if (locals.error_msg && error_msg.length > 0) { %><div class="alert alert-danger"><%= error_msg %></div><% } %>

        <div class="row mb-4">
            <div class="col-xl-3 col-md-6 mb-4"><div class="card h-100"><div class="card-body"><h5 class="card-title">Total Users</h5><p class="card-text fs-2 fw-bold"><%= stats.totalUsers %></p></div></div></div>
            <div class="col-xl-3 col-md-6 mb-4"><div class="card h-100"><div class="card-body"><h5 class="card-title">Pending Approvals</h5><p class="card-text fs-2 fw-bold"><%= stats.pendingUsers %></p></div></div></div>
            <div class="col-xl-3 col-md-6 mb-4"><div class="card h-100"><div class="card-body"><h5 class="card-title">Check-ins (Today)</h5><p class="card-text fs-2 fw-bold"><%= stats.checkInsToday %></p></div></div></div>
            <div class="col-xl-3 col-md-6 mb-4"><div class="card h-100"><div class="card-body"><h5 class="card-title">Online Now</h5><p class="card-text fs-2 fw-bold" id="online-users-count">0</p></div></div></div>
        </div>

        <ul class="nav nav-tabs" id="adminTab" role="tablist">
            <li class="nav-item" role="presentation"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#users-panel">User Management</button></li>
            <li class="nav-item" role="presentation"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#orders-panel">Sales Orders</button></li>
            <li class="nav-item" role="presentation"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#transactions-panel">Transactions</button></li>
            <li class="nav-item" role="presentation"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#checkins-panel">Check-in History</button></li>
            <li class="nav-item" role="presentation"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#daily-plans-panel">Daily Plans</button></li>
            <li class="nav-item" role="presentation"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#weekly-itineraries-panel">Weekly Itineraries</button></li>
            <li class="nav-item" role="presentation"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#map-panel">Live Map</button></li>
        </ul>

        <div class="tab-content pt-3" id="adminTabContent">
            <div class="tab-pane fade show active" id="users-panel" role="tabpanel">
                <div class="card card-tab"><div class="card-body">
                    <input type="text" id="userSearch" class="form-control mb-3" placeholder="Search users...">
                    <div class="table-responsive"><table class="table table-hover align-middle" id="userTable">
                        <thead><tr><th>Name</th><th>Role</th><th>Assign Role</th></tr></thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr data-search="<%= (user.firstName || '').toLowerCase() %> <%= (user.lastName || '').toLowerCase() %> <%= (user.username || '').toLowerCase() %>">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="<%= user.profilePicture %>" class="rounded-circle me-3" width="40" height="40" style="object-fit: cover;">
                                            <div><strong><%= user.firstName %> <%= user.lastName %></strong><div class="text-muted small"><%= user.username %></div></div>
                                        </div>
                                    </td>
                                    <td><span class="badge bg-secondary"><%= user.role %></span></td>
                                    <td>
                                        <form action="/users/update-role/<%= user._id %>" method="POST" class="d-flex">
                                            <select name="role" class="form-select form-select-sm me-2"><option value="Pending" <%= user.role === 'Pending' ? 'selected' : '' %>>Pending</option><option value="MSR" <%= user.role === 'MSR' ? 'selected' : '' %>>MSR</option><option value="KAS" <%= user.role === 'KAS' ? 'selected' : '' %>>KAS</option><option value="Accounting" <%= user.role === 'Accounting' ? 'selected' : '' %>>Accounting</option><option value="Admin" <%= user.role === 'Admin' ? 'selected' : '' %>>Admin</option></select>
                                            <button type="submit" class="btn btn-sm btn-primary">Save</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table></div>
                </div></div>
            </div>
            <div class="tab-pane fade" id="orders-panel" role="tabpanel">
                 <div class="card card-tab"><div class="card-body">
                    <input type="text" id="orderSearch" class="form-control mb-3" placeholder="Search orders...">
                    <div class="table-responsive"><table class="table table-hover align-middle" id="orderTable">
                        <thead><tr><th>User</th><th>Reference</th><th>Customer</th><th>Actions</th></tr></thead>
                        <tbody>
                            <% orders.forEach(order => { %>
                                <tr data-search="<%= (order.user ? (order.user.firstName || '') + ' ' + (order.user.lastName || '') : '').toLowerCase() %> <%= (order.reference || '').toLowerCase() %>">
                                    <td><%= order.user ? `${order.user.firstName} ${order.user.lastName}` : 'N/A' %></td>
                                    <td><%= order.reference %></td>
                                    <td><%= order.customerName %></td>
                                    <td><button class="btn btn-sm btn-outline-primary view-order-btn" data-order-id="<%= order._id %>">View</button></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table></div>
                </div></div>
            </div>
            <div class="tab-pane fade" id="transactions-panel" role="tabpanel">
                 <div class="card card-tab"><div class="card-body">
                    <input type="text" id="txnSearch" class="form-control mb-3" placeholder="Search transactions...">
                    <div class="table-responsive"><table class="table table-hover" id="txnTable">
                        <thead><tr><th>Submitted By</th><th>Type</th><th>Customer/Hospital</th><th>Actions</th></tr></thead>
                        <tbody>
                            <% transactions.forEach(txn => { %>
                                <tr data-search="<%= (txn.user.firstName || '').toLowerCase() %> <%= (txn.user.lastName || '').toLowerCase() %>">
                                    <td><%= txn.user.firstName %> <%= txn.user.lastName %></td>
                                    <td><span class="badge bg-<%= txn.type === 'Collection' ? 'info' : 'success' %>"><%= txn.type %></span></td>
                                    <td><%= txn.customer || txn.hospital %></td>
                                    <td><a href="/transactions/<%= txn._id %>" class="btn btn-sm btn-primary">View Details</a></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table></div>
                </div></div>
            </div>
            <div class="tab-pane fade" id="checkins-panel" role="tabpanel">
               <div class="card card-tab"><div class="card-body">
                    <input type="text" id="checkinSearch" class="form-control mb-3" placeholder="Search check-ins...">
                    <div class="table-responsive"><table class="table table-hover align-middle" id="checkinTable">
                        <thead><tr><th>User</th><th>Hospital</th><th>Location</th><th>Proof</th><th>Signature</th><th>Date</th></tr></thead>
                        <tbody>
                         <% checkins.forEach(checkin => { %>
                          <tr data-search="<%= (checkin.user ? (checkin.user.firstName || '') + ' ' + (checkin.user.lastName || '') : '').toLowerCase() %> <%= (checkin.hospital ? checkin.hospital.name : '').toLowerCase() %>">
                             <td><%= checkin.user ? `${checkin.user.firstName} ${checkin.user.lastName}` : 'N/A' %></td>
                            <td><%= checkin.hospital ? checkin.hospital.name : 'N/A' %></td>
                               <td>
                          <% if (checkin.mapImageUrl) { %>
                             <img src="<%= checkin.mapImageUrl %>" alt="Map" style="width: 150px; border-radius: 0.25rem; cursor: pointer;" onclick="showImageInModal('<%= checkin.mapImageUrl %>')">
                          <% } else { %> No Location <% } %>
                           </td>
                          <td><% if (checkin.proof) { %><img src="<%= checkin.proof %>" alt="Proof" width="70" style="border-radius: 0.25rem; cursor: pointer;" onclick="showImageInModal('<%= checkin.proof %>')"><% } else { %> No Proof <% } %></td>
                       <td><% if (checkin.signature) { %><img src="<%= checkin.signature %>" alt="Signature" width="70" style="background-color: #fafafa; border-radius: 0.25rem; cursor: pointer;" onclick="showImageInModal('<%= checkin.signature %>')"><% } else { %> No Signature <% } %></td>
                     <td><%= new Date(checkin.createdAt).toLocaleString() %></td>
                         </tr>
                                 <% }) %>
                                </tbody>
                    </table></div>
                </div></div>
            </div>
            <div class="tab-pane fade" id="daily-plans-panel" role="tabpanel">
                <div class="card card-tab"><div class="card-body">
                    <input type="text" id="dailyPlanSearch" class="form-control mb-3" placeholder="Search daily plans...">
                    <div class="table-responsive"><table class="table table-hover" id="dailyPlanTable">
                        <thead><tr><th>Submitted By</th><th>Plan Date</th><th>First Client Call</th><th>Actions</th></tr></thead>
                        <tbody>
                            <% dailyPlans.forEach(plan => { %>
                                <tr data-search="<%= (plan.user.firstName || '').toLowerCase() %> <%= (plan.user.lastName || '').toLowerCase() %>">
                                    <td><%= plan.user.firstName %> <%= plan.user.lastName %></td>
                                    <td><%= new Date(plan.planDate).toLocaleDateString() %></td>
                                    <td><%= plan.firstClientCall %></td>
                                    <td><a href="/planning/daily/<%= plan._id %>" class="btn btn-sm btn-primary">View Details</a></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table></div>
                </div></div>
            </div>
            <div class="tab-pane fade" id="weekly-itineraries-panel" role="tabpanel">
                <div class="card card-tab"><div class="card-body">
                    <input type="text" id="weeklyItinerarySearch" class="form-control mb-3" placeholder="Search weekly itineraries...">
                    <div class="table-responsive"><table class="table table-hover" id="weeklyItineraryTable">
                        <thead><tr><th>Submitted By</th><th>Week Start Date</th><th>Actions</th></tr></thead>
                        <tbody>
                            <% weeklyItineraries.forEach(itinerary => { %>
                                <tr data-search="<%= (itinerary.user.firstName || '').toLowerCase() %> <%= (itinerary.user.lastName || '').toLowerCase() %>">
                                    <td><%= itinerary.user.firstName %> <%= itinerary.user.lastName %></td>
                                    <td><%= new Date(itinerary.weekStartDate).toLocaleDateString() %></td>
                                    <td><a href="/planning/weekly/<%= itinerary._id %>" class="btn btn-sm btn-primary">View Details</a></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table></div>
                </div></div>
            </div>
            <div class="tab-pane fade" id="map-panel" role="tabpanel">
                <div class="card card-tab"><div class="card-body">
                    <div id="map" style="height: 600px; width: 100%; border-radius: 0.5rem;"></div>
                </div></div>
            </div>
        </div>
    </main>

    <%- include('partials/order-detail-modal') %>
    <%- include('partials/image-zoom-modal') %>

    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="/js/dashboard-main.js"></script>
    <script src="/js/push-client.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const imageZoomModal = new bootstrap.Modal(document.getElementById('imageZoomModal'));
            const modalZoomImage = document.getElementById('modalZoomImage');
            window.showImageInModal = function(src) {
                if (modalZoomImage) {
                    modalZoomImage.src = src;
                    imageZoomModal.show();
                }
            }

            const setupSearch = (inputId, tableId) => {
                const searchInput = document.getElementById(inputId);
                if (!searchInput) return;
                const tableRows = document.querySelectorAll(`#${tableId} tbody tr`);
                searchInput.addEventListener('keyup', () => {
                    const filter = searchInput.value.toLowerCase();
                    tableRows.forEach(row => {
                        const searchData = row.dataset.search || '';
                        row.style.display = searchData.includes(filter) ? '' : 'none';
                    });
                });
            };
            setupSearch('userSearch', 'userTable');
            setupSearch('orderSearch', 'orderTable');
            setupSearch('txnSearch', 'txnTable');
            setupSearch('checkinSearch', 'checkinTable');
            setupSearch('dailyPlanSearch', 'dailyPlanTable');
            setupSearch('weeklyItinerarySearch', 'weeklyItineraryTable');

            const initialUsers = <%- JSON.stringify(users || []) %>;
            const userMarkers = {};
            let map;
            const mapTabButton = document.querySelector('button[data-bs-target="#map-panel"]');
            if (mapTabButton) {
                mapTabButton.addEventListener('shown.bs.tab', event => {
                    if (!map) {
                        map = L.map('map').setView([12.8797, 121.7740], 6); // Centered on Philippines
                        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);
                        initialUsers.forEach(user => {
                            if (user.lastLocation && user.lastLocation.coordinates && user.lastLocation.coordinates.length === 2) {
                                const [lng, lat] = [user.lastLocation.coordinates[0], user.lastLocation.coordinates[1]];
                                if (lat !== 0 && lng !== 0) {
                                    const marker = L.marker([lat, lng]).addTo(map).bindPopup(`<b>${user.firstName} ${user.lastName}</b><br>${user.role}`);
                                    userMarkers[user._id] = marker;
                                }
                            }
                        });
                    }
                    setTimeout(() => map.invalidateSize(), 10);
                });
            }

            const socket = io({ query: { userId: document.body.dataset.userId } });
            socket.on('locationUpdate', ({ userId, lat, lng }) => {
                const user = initialUsers.find(u => u._id === userId);
                if (!user || !map) return;
                if (userMarkers[userId]) {
                    userMarkers[userId].setLatLng([lat, lng]);
                } else {
                    const marker = L.marker([lat, lng]).addTo(map).bindPopup(`<b>${user.firstName} ${user.lastName}</b><br>${user.role}`);
                    userMarkers[userId] = marker;
                }
            });
            const onlineUsersCountEl = document.getElementById('online-users-count');
            socket.on('onlineUsers', (count) => {
                if(onlineUsersCountEl) onlineUsersCountEl.textContent = count;
            });
        });
    </script>
    <%- include('partials/chat-widget.ejs') %>
    <script src="/js/chat-widget.js"></script>
</body>
</html>