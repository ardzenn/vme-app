<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login - VME App</title>
    <%- include('partials/header-meta') %>
    <style>
        .navbar { display: none; } /* Hide navbar on auth pages */
    </style>
</head>
<body>
    <div class="login-page">
        <div class="login-wrapper">
            
            <div class="login-form-container">
                <div class="text-center mb-5">
                    <img src="/images/logo.png" alt="VME Logo" style="height: 60px; margin-bottom: 1rem;">
                    <h1 style="font-size: 1.75rem;">Welcome Back!</h1>
                    <p class="text-secondary">Please sign in to continue.</p>
                </div>

                <% if (locals.error && error.length > 0) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>
                <% if (locals.success_msg && success_msg.length > 0) { %>
                    <div class="alert alert-success"><%= success_msg %></div>
                <% } %>
                <% if (locals.error_msg && error_msg.length > 0) { %>
                    <div class="alert alert-danger"><%= error_msg %></div>
                <% } %>

                <form action="/login" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username (Email)</label>
                        <input type="text" class="form-control" id="username" name="username" required>
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="text-end mb-3">
                        <a href="/forgot-password" class="text-secondary small">Forgot Password?</a>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-2">Sign In</button>
                </form>

                <div class="text-center mt-4">
                    <p class="text-secondary small">Don't have an account? <a href="/signup">Sign Up</a></p>
                </div>
            </div>

            <div class="login-image-container">
                 <img src="/images/logo.png" alt="VME App Illustration" class="login-logo-img">
                 <h2 class="login-brand-title">Vintel Med Enterprises</h2>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const splashScreen = document.getElementById('splash-screen');
            if (splashScreen) {
                splashScreen.style.display = 'none';
            }
        });
    </script>
</body>
</html>