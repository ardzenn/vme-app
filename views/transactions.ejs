<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collection & Deposit - VME App</title>
    <%- include('partials/header-meta') %>
</head>
<body>
    <%- include('partials/navbar') %>
    <main class="container my-5" style="max-width: 800px;">
        <header class="page-header">
            <div>
                <h1>Collection & Deposit</h1>
                <p class="text-muted">Select a form to submit your financial documents.</p>
            </div>
        </header>

        <% if (locals.success_msg && success_msg.length > 0) { %><div class="alert alert-success"><%= success_msg %></div><% } %>
        <% if (locals.error_msg && error_msg.length > 0) { %><div class="alert alert-danger"><%= error_msg %></div><% } %>

        <div class="btn-group w-100 mb-4">
            <button class="btn btn-primary active" id="show-collection-btn">Collection Form</button>
            <button class="btn btn-outline-primary" id="show-deposit-btn">Deposit Form</button>
        </div>

        <form action="/transactions" method="POST" enctype="multipart/form-data" id="collection-form">
            <input type="hidden" name="type" value="Collection">
            <div class="card">
                <div class="card-header"><h4>Collection Details</h4></div>
                <div class="card-body row g-3">
                    <div class="col-12"><label class="form-label">Customer</label><input type="text" name="customer" class="form-control" required></div>
                    <div class="col-md-6"><label class="form-label">Date Collected</label><input type="date" name="dateCollected" class="form-control" required></div>
                    <div class="col-md-6"><label class="form-label">PR/CR</label><input type="text" name="prCr" class="form-control"></div>
                    <div class="col-md-6"><label class="form-label">S.I/D.R</label><input type="text" name="siDr" class="form-control"></div>
                    <div class="col-md-6"><label class="form-label">Date of Check</label><input type="date" name="dateOfCheck" class="form-control"></div>
                    <div class="col-12"><label class="form-label">Bank/Check No.</label><input type="text" name="bankCheckNo" class="form-control"></div>
                    <div class="col-12"><label class="form-label">Amount</label><input type="number" name="amount" class="form-control" step="0.01" required></div>
                    <div class="col-12"><label class="form-label">Attach / Upload File</label><input type="file" name="attachment" class="form-control" required></div>
                    <div class="col-12"><button type="submit" class="btn btn-primary w-100 mt-3">Submit Collection</button></div>
                </div>
            </div>
        </form>

        <form action="/transactions" method="POST" enctype="multipart/form-data" id="deposit-form" style="display: none;">
            <input type="hidden" name="type" value="Deposit">
             <div class="card">
                <div class="card-header"><h4>Deposit Details</h4></div>
                <div class="card-body row g-3">
                    <div class="col-12"><label class="form-label">Details</label><input type="text" name="details" class="form-control"></div>
                    <div class="col-12"><label class="form-label">Hospital</label><input type="text" name="hospital" class="form-control"></div>
                    <div class="col-md-6"><label class="form-label">Date Deposited</label><input type="date" name="dateDeposited" class="form-control" required></div>
                    <div class="col-md-6"><label class="form-label">Cheque or Cash?</label><select name="paymentMethod" class="form-select"><option>Cheque</option><option>Cash</option></select></div>
                    <div class="col-12"><label class="form-label">Total Amount Deposited</label><input type="number" name="totalAmountDeposited" class="form-control" step="0.01" required></div>
                    <div class="col-12"><label class="form-label">Attach / Upload File</label><input type="file" name="attachment" class="form-control" required></div>
                    <div class="col-12"><button type="submit" class="btn btn-primary w-100 mt-3">Submit Deposit</button></div>
                </div>
            </div>
        </form>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const collectionBtn = document.getElementById('show-collection-btn');
        const depositBtn = document.getElementById('show-deposit-btn');
        const collectionForm = document.getElementById('collection-form');
        const depositForm = document.getElementById('deposit-form');
        
        collectionBtn.addEventListener('click', () => {
            collectionForm.style.display = 'block';
            depositForm.style.display = 'none';
            collectionBtn.classList.add('active', 'btn-primary');
            collectionBtn.classList.remove('btn-outline-primary');
            depositBtn.classList.remove('active', 'btn-primary');
            depositBtn.classList.add('btn-outline-primary');
        });

        depositBtn.addEventListener('click', () => {
            depositForm.style.display = 'block';
            collectionForm.style.display = 'none';
            depositBtn.classList.add('active', 'btn-primary');
            depositBtn.classList.remove('btn-outline-primary');
            collectionBtn.classList.remove('active', 'btn-primary');
            collectionBtn.classList.add('btn-outline-primary');
        });
    </script>
</body>
</html>