<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Profile - VME App</title>
    <link rel="icon" href="/images/logo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <main class="container" style="max-width: 900px; margin-top: 2rem; margin-bottom: 4rem;">
        <header class="page-header">
            <div>
                <h1 style="font-size: 1.875rem;">Your Profile</h1>
                <p style="margin: 0;">Manage your personal information and profile picture.</p>
            </div>
        </header>

        <% if (success_msg && success_msg.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (error_msg && error_msg.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <div class="card">
            <div class="card-body">
                <div class="row g-5 align-items-center">
                    <div class="col-md-4 text-center">
                        <img id="imagePreview" src="<%= user.profilePicture ? user.profilePicture : 'https://via.placeholder.com/150' %>" alt="Profile Picture" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover; border: 4px solid var(--white); box-shadow: var(--shadow-md);">

                        <form action="/profile" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <input type="file" id="imageUploadInput" name="profilePicture" class="form-control form-control-sm" required accept="image/*">
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="17 8 12 3 7 8"></polyline><line x1="12" y1="3" x2="12" y2="15"></line></svg>
                                <span>Upload Picture</span>
                            </button>
                        </form>
                    </div>

                    <div class="col-md-8">
                        <h4 class="mb-4">Account Details</h4>
                        <div class="row">
                            <div class="col-6 mb-3"><strong>First Name:</strong><p><%= user.firstName %></p></div>
                            <div class="col-6 mb-3"><strong>Last Name:</strong><p><%= user.lastName %></p></div>
                            <div class="col-6 mb-3"><strong>Birthdate:</strong><p><%= user.birthdate ? new Date(user.birthdate).toLocaleDateString() : 'N/A' %></p></div>
                            <div class="col-6 mb-3"><strong>Area:</strong><p><%= user.area %></p></div>
                            <div class="col-12 mb-3"><strong>Address:</strong><p><%= user.address %></p></div>
                            <div class="col-6 mb-3"><strong>Username:</strong><p><%= user.username %></p></div>
                            <div class="col-6 mb-3"><strong>Role:</strong><p><span class="badge badge-success"><%= user.role %></span></p></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const imageUploadInput = document.getElementById('imageUploadInput');
        const imagePreview = document.getElementById('imagePreview');

        if (imageUploadInput && imagePreview) {
            imageUploadInput.addEventListener('change', function(event) {
                const file = event.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        imagePreview.src = e.target.result;
                    }
                    reader.readAsDataURL(file);
                }
            });
        }
    </script>
</body>
</html>