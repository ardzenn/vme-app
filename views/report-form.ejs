<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Coverage Report - VME App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <main class="container my-5" style="max-width: 900px;">
        <header class="page-header">
            <div>
                <h1>Daily Coverage Report</h1>
                <p class="text-muted">Submit your summary for <%= new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>.</p>
            </div>
        </header>

        <form action="/report" method="POST" enctype="multipart/form-data">
            <div class="card">
                <div class="card-body">
                    <div class="mb-4">
                        <label for="lastClientVisited" class="form-label fw-bold">Last Client Visited for the Day:</label>
                        <input type="text" id="lastClientVisited" name="lastClientVisited" class="form-control" value="<%= prefilledData.lastClientVisited %>">
                    </div>

                    <div id="visited-calls-container" class="mb-4">
                        <label class="form-label fw-bold">1.) Visited Hospitals and MDs:</label>
                        <% prefilledData.visitedCalls.forEach((call, index) => { %>
                            <div class="input-group mb-2">
                                <span class="input-group-text"><%= index + 1 %>.</span>
                                <input type="text" name="hospitals[]" class="form-control" value="<%= call.hospital %>" placeholder="Hospital Name">
                                <input type="text" name="doctors[]" class="form-control" value="<%= call.doctor %>" placeholder="Doctor Name">
                            </div>
                        <% }) %>
                    </div>
                    
                    <h5 class="mt-5">Summary of Client Calls:</h5>
                    <div class="row g-3 mb-4">
                        <div class="col-md-3">
                            <label class="form-label">A. No. of Hospitals</label>
                            <input type="number" class="form-control" value="<%= prefilledData.callSummary.hospitals %>" readonly>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">B. No. of MDs</label>
                            <input type="number" class="form-control" value="<%= prefilledData.callSummary.mds %>" readonly>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">C. No. of Pharmacists</label>
                            <input type="number" name="pharmacists" class="form-control" value="0" min="0">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">D. No. of Acctg Staff</label>
                            <input type="number" name="accountingStaff" class="form-control" value="0" min="0">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="accomplishments" class="form-label fw-bold">*** ACCOMPLISHMENTS AND FEEDBACKS ON VISITED HOSPITALS:</label>
                        <textarea id="accomplishments" name="accomplishments" class="form-control" rows="8" placeholder="Please provide a comprehensive narrative report..."></textarea>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-bold">2.) Sales for the Day:</label>
                            <div id="sales-container">
                                </div>
                            <button type="button" class="btn btn-sm btn-outline-secondary mt-2" onclick="addSaleRow()">+ Add Sale</button>
                        </div>
                        <div class="col-md-6 mb-4">
                             <label class="form-label fw-bold">3.) Collections for the Day:</label>
                             <input type="number" name="collectionsCurrent" class="form-control" placeholder="90 Days and Below" value="0" min="0" step="0.01">
                             <label class="form-label fw-bold mt-2">4.) Collections for Overdue Accounts:</label>
                             <input type="number" name="collectionsOverdue" class="form-control" placeholder="90 Days and Up" value="0" min="0" step="0.01">
                        </div>
                    </div>

                    <h5 class="mt-4">Expense Report for the Day:</h5>
                     <div class="row g-3 mb-4">
                        <div class="col-md-4"><label class="form-label">A.) Meal Allowance</label><input type="number" name="meal" class="form-control" value="0" min="0" step="0.01"></div>
                        <div class="col-md-4"><label class="form-label">B.) Transportation</label><input type="number" name="transportation" class="form-control" value="0" min="0" step="0.01"></div>
                        <div class="col-md-4"><label class="form-label">C.) Toll Fees</label><input type="number" name="toll" class="form-control" value="0" min="0" step="0.01"></div>
                        <div class="col-md-4"><label class="form-label">D.) Parking Fees</label><input type="number" name="parking" class="form-control" value="0" min="0" step="0.01"></div>
                        <div class="col-md-4"><label class="form-label">E.) Lodging</label><input type="number" name="lodging" class="form-control" value="0" min="0" step="0.01"></div>
                    </div>

                    <div class="mb-3">
                        <label for="attachments" class="form-label fw-bold">Upload Supporting Images (Optional)</label>
                        <input class="form-control" type="file" id="attachments" name="attachments" multiple accept="image/*">
                    </div>

                </div>
                <div class="card-footer text-end">
                    <a href="/dashboard" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Submit Report</button>
                </div>
            </div>
        </form>
    </main>
    <script>
        let saleIndex = 0;
        function addSaleRow() {
            const container = document.getElementById('sales-container');
            const newRow = document.createElement('div');
            newRow.className = 'input-group mb-2';
            newRow.innerHTML = `
                <input type="text" name="sales[${saleIndex}][client]" class="form-control" placeholder="Client Name">
                <span class="input-group-text">â‚±</span>
                <input type="number" name="sales[${saleIndex}][amount]" class="form-control" placeholder="Amount" min="0" step="0.01">
            `;
            container.appendChild(newRow);
            saleIndex++;
        }
        // Add one sale row by default
        addSaleRow();
    </script>
</body>
</html>