<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Coverage Report - VME App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .odometer-preview { max-width: 150px; display: block; margin-top: 10px; }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <main class="container my-5" style="max-width: 900px;">
        <header class="page-header">
            <div>
                <h1>Daily Coverage Report</h1>
                <p class="text-muted">Submit your summary for <%= new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>.</p>
            </div>
        </header>

        <form action="/report" method="POST" enctype="multipart/form-data">
            <div class="card">
                <div class="card-body">
                    <div class="mb-4">
                        <label for="lastClientVisited" class="form-label fw-bold">Last Client Visited for the Day:</label>
                        <input type="text" id="lastClientVisited" name="lastClientVisited" class="form-control" value="<%= prefilledData.lastClientVisited %>">
                    </div>

                    <div id="visited-calls-container" class="mb-2">
                        <label class="form-label fw-bold">1.) Visited Hospitals and MDs:</label>
                        <% prefilledData.visitedCalls.forEach((call, index) => { %>
                            <div class="input-group mb-2">
                                <span class="input-group-text"><%= index + 1 %>.</span>
                                <input type="text" name="hospitals[]" class="form-control" value="<%= call.hospital %>" placeholder="Hospital Name">
                                <input type="text" name="doctors[]" class="form-control" value="<%= call.doctor %>" placeholder="Doctor Name">
                            </div>
                        <% }) %>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-secondary mb-4" onclick="addVisitRow()">+ Add Another Visit</button>
                    
                    <h5 class="mt-4">Summary of Client Calls:</h5>
                    <div class="row g-3 mb-4">
                        <div class="col-md-3"><label class="form-label">A. No. of Hospitals</label><input type="number" class="form-control" value="<%= prefilledData.callSummary.hospitals %>" readonly></div>
                        <div class="col-md-3"><label class="form-label">B. No. of MDs</label><input type="number" class="form-control" value="<%= prefilledData.callSummary.mds %>" readonly></div>
                        <div class="col-md-3"><label class="form-label">C. No. of Pharmacists</label><input type="number" name="pharmacists" class="form-control" value="0" min="0"></div>
                        <div class="col-md-3"><label class="form-label">D. No. of Acctg Staff</label><input type="number" name="accountingStaff" class="form-control" value="0" min="0"></div>
                    </div>

                    <div class="mb-4">
                        <label for="accomplishments" class="form-label fw-bold">*** ACCOMPLISHMENTS AND FEEDBACKS:</label>
                        <textarea id="accomplishments" name="accomplishments" class="form-control" rows="8" placeholder="Please provide a comprehensive narrative report..."></textarea>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">2.) Sales for the Day:</label>
                            <div id="sales-container"></div>
                            <button type="button" class="btn btn-sm btn-outline-secondary mt-2" onclick="addSaleRow()">+ Add Sale</button>
                        </div>
                        <div class="col-md-6 mb-3">
                             <label class="form-label fw-bold">3.) Collections (90 Days & Below):</label>
                             <input type="number" name="collectionsCurrent" class="form-control" placeholder="Amount" value="0" min="0" step="0.01">
                             <label class="form-label fw-bold mt-2">4.) Collections (Overdue):</label>
                             <input type="number" name="collectionsOverdue" class="form-control" placeholder="90 Days and Up" value="0" min="0" step="0.01">
                        </div>
                        <div class="col-12 mb-3">
                             <label class="form-label fw-bold">Month To Date (MTD):</label>
                             <textarea name="mtdNotes" class="form-control" rows="3" placeholder="Enter MTD Sales and Collections summary..."></textarea>
                        </div>
                    </div>

                    <div class="row mb-3 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Starting Odometer</label>
                            <input type="number" name="startingOdometer" class="form-control" value="<%= typeof startingOdometer !== 'undefined' ? startingOdometer : '' %>" readonly>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Ending Odometer</label>
                            <input type="number" name="endingOdometer" id="endingOdometer" class="form-control" placeholder="Enter ending odometer" min="0">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Total Km. Reading</label>
                            <input type="number" id="totalKmReading" class="form-control" value="" readonly>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label for="endingOdometerNote" class="form-label">Odometer Note</label>
                        <input type="text" id="endingOdometerNote" name="endingOdometerNote" class="form-control" placeholder="Optional note about ending odometer...">
                    </div>
                    <div class="mb-2">
                        <label for="endingOdometerPhoto" class="form-label">Ending Odometer Photo (Take or Upload)</label>
                        <input type="file" id="endingOdometerPhoto" name="endingOdometerPhoto" accept="image/*" capture="environment" class="form-control">
                        <img id="endingOdometerPreview" class="odometer-preview" style="display:none;">
                    </div>

                    <h5 class="mt-4">Expense Report for the Day:</h5>
                     <div class="row g-3 mb-4 align-items-end">
                        <div class="col-md-3"><label class="form-label">A.) Meal</label><input type="number" name="meal" class="form-control expense-input" value="0" min="0" step="0.01"></div>
                        <div class="col-md-3"><label class="form-label">B.) Transportation</label><input type="number" name="transportation" class="form-control expense-input" value="0" min="0" step="0.01"></div>
                        <div class="col-md-3"><label class="form-label">C.) Toll Fees</label><input type="number" name="toll" class="form-control expense-input" value="0" min="0" step="0.01"></div>
                        <div class="col-md-3"><label class="form-label">D.) Parking Fees</label><input type="number" name="parking" class="form-control expense-input" value="0" min="0" step="0.01"></div>
                        <div class="col-md-3"><label class="form-label">E.) Lodging</label><input type="number" name="lodging" class="form-control expense-input" value="0" min="0" step="0.01"></div>
                        <div class="col-md-9 text-md-end">
                            <h4 class="mb-0">Total Expenses: <span id="total-expenses-display" class="fw-bold">₱0.00</span></h4>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="attachments" class="form-label fw-bold">Upload Supporting Images (Optional)</label>
                        <input class="form-control" type="file" id="attachments" name="attachments" multiple accept="image/*">
                    </div>

                    <input type="hidden" name="itinerary" id="itineraryField">
                    <input type="hidden" name="salesObjectives" id="salesObjectivesField">
                    <input type="hidden" name="targetCollectionsCurrent" id="targetCollectionsCurrentField">
                    <input type="hidden" name="targetCollectionsOverdue" id="targetCollectionsOverdueField">
                </div>
                <div class="card-footer text-end">
                    <a href="/dashboard" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Submit Report</button>
                </div>
            </div>
        </form>
    </main>
    <script>
        let saleIndex = 0;
        function addSaleRow() {
            const container = document.getElementById('sales-container');
            const newRow = document.createElement('div');
            newRow.className = 'input-group mb-2';
            newRow.innerHTML = `<input type="text" name="sales[${saleIndex}][client]" class="form-control" placeholder="Client Name"><span class="input-group-text">₱</span><input type="number" name="sales[${saleIndex}][amount]" class="form-control" placeholder="Amount" value="0" min="0" step="0.01">`;
            container.appendChild(newRow);
            saleIndex++;
        }
        addSaleRow(); // Add one row by default

        let visitIndex = document.querySelectorAll('#visited-calls-container .input-group').length;
        function addVisitRow() {
            const container = document.getElementById('visited-calls-container');
            const newRow = document.createElement('div');
            newRow.className = 'input-group mb-2';
            newRow.innerHTML = `<span class="input-group-text">${visitIndex + 1}.</span><input type="text" name="hospitals[]" class="form-control" placeholder="Hospital Name"><input type="text" name="doctors[]" class="form-control" placeholder="Doctor Name">`;
            container.appendChild(newRow);
            visitIndex++;
        }

        function updateTotalExpenses() {
            let total = 0;
            document.querySelectorAll('.expense-input').forEach(input => {
                total += parseFloat(input.value) || 0;
            });
            document.getElementById('total-expenses-display').textContent = '₱' + total.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
        }
        document.querySelectorAll('.expense-input').forEach(input => {
            input.addEventListener('input', updateTotalExpenses);
        });

        // Odometer: live calculation
        const ending = document.getElementById('endingOdometer');
        const total = document.getElementById('totalKmReading');
        const starting = document.querySelector('[name="startingOdometer"]');
        function updateTotalKm() {
            const start = Number(starting.value || 0);
            const end = Number(ending.value || 0);
            total.value = (start && end && end >= start) ? (end - start) : '';
        }
        ending.addEventListener('input', updateTotalKm);

        // Preview for ending odometer photo
        document.getElementById('endingOdometerPhoto').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(ev) {
                    const img = document.getElementById('endingOdometerPreview');
                    img.src = ev.target.result;
                    img.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>