<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Call Plan - VME App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <main class="container my-5" style="max-width: 900px;">
        <header class="page-header">
            <div>
                <h1>Daily Call Plan</h1>
                <p class="text-muted">Plan your calls for <%= new Date().toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric', year: 'numeric' }) %>.</p>
            </div>
        </header>

        <form action="/planning/daily" method="POST">
            <div class="card">
                <div class="card-body">
                    <div class="mb-4">
                        <label for="firstClientCall" class="form-label fw-bold">FIRST CLIENT CALL:</label>
                        <input type="text" id="firstClientCall" name="firstClientCall" class="form-control" placeholder="e.g., Davao City Hall">
                    </div>
                    <div class="mb-4">
                        <label for="areasToVisit" class="form-label fw-bold">AREAS TO VISIT TODAY:</label>
                        <input type="text" id="areasToVisit" name="areasToVisit" class="form-control" placeholder="e.g., Davao, Digos, Davao del Sur">
                    </div>
                    <div id="places-container" class="mb-4">
                        <label class="form-label fw-bold">HOSPITALS & CAPITOL TO VISIT:</label>
                        </div>
                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="addPlaceRow()">+ Add Place</button>
                    <hr class="my-4">

                    <div id="sales-objectives-container" class="mb-4">
                        <label class="form-label fw-bold">2.) SALES OBJECTIVES FOR THE DAY:</label>
                        </div>
                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="addObjectiveRow()">+ Add Objective</button>
                    <hr class="my-4">

                    <div id="current-collections-container" class="mb-4">
                        <label class="form-label fw-bold">3.) TARGET COLLECTIONS FOR THE DAY (90 Days and Below):</label>
                        </div>
                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="addCurrentCollectionRow()">+ Add Target</button>
                    <hr class="my-4">
                    
                    <div id="overdue-collections-container" class="mb-4">
                        <label class="form-label fw-bold">4.) TARGET COLLECTIONS FOR OVERDUE ACCOUNTS:</label>
                        </div>
                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="addOverdueCollectionRow()">+ Add Overdue Target</button>
                </div>

                <div class="card-footer text-end">
                    <a href="/dashboard" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Submit Plan</button>
                </div>
            </div>
        </form>
    </main>

    <script>
        // --- Functions to dynamically add input rows ---
        let placeIndex = 0;
        function addPlaceRow() {
            const container = document.getElementById('places-container');
            const newRow = document.createElement('div');
            newRow.className = 'input-group mb-2';
            newRow.innerHTML = `<span class="input-group-text">${placeIndex + 1}.</span><input type="text" name="placesToVisit[]" class="form-control" placeholder="Place Name">`;
            container.appendChild(newRow);
            placeIndex++;
        }

        let objectiveIndex = 0;
        function addObjectiveRow() {
            const container = document.getElementById('sales-objectives-container');
            const newRow = document.createElement('div');
            newRow.className = 'input-group mb-2';
            newRow.innerHTML = `<span class="input-group-text">-</span><input type="text" name="salesObjectives[]" class="form-control" placeholder="Objective description">`;
            container.appendChild(newRow);
            objectiveIndex++;
        }

        let currentCollectionIndex = 0;
        function addCurrentCollectionRow() {
            const container = document.getElementById('current-collections-container');
            const newRow = document.createElement('div');
            newRow.className = 'input-group mb-2';
            newRow.innerHTML = `<span class="input-group-text">${currentCollectionIndex + 1}.</span><input type="text" name="targetCollections[current][${currentCollectionIndex}][client]" class="form-control" placeholder="Client Name">`;
            container.appendChild(newRow);
            currentCollectionIndex++;
        }
        
        let overdueCollectionIndex = 0;
        function addOverdueCollectionRow() {
            const container = document.getElementById('overdue-collections-container');
            const newRow = document.createElement('div');
            newRow.className = 'card bg-light p-3 mb-2';
            newRow.innerHTML = `
                <h6>Overdue Target ${overdueCollectionIndex + 1}</h6>
                <input type="text" name="targetCollections[overdue][${overdueCollectionIndex}][client]" class="form-control mb-2" placeholder="Client Name">
                <input type="text" name="targetCollections[overdue][${overdueCollectionIndex}][si_dr]" class="form-control mb-2" placeholder="SI / DR Number">
                <input type="date" name="targetCollections[overdue][${overdueCollectionIndex}][date]" class="form-control mb-2" placeholder="Date of SI / DR">
                <input type="number" name="targetCollections[overdue][${overdueCollectionIndex}][amount]" class="form-control" placeholder="Amount" min="0" step="0.01">
            `;
            container.appendChild(newRow);
            overdueCollectionIndex++;
        }

        // Add one of each row by default to start
        addPlaceRow();
        addObjectiveRow();
        addCurrentCollectionRow();
        addOverdueCollectionRow();
    </script>
</body>
</html>