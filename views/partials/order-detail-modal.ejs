<div class="modal fade" id="orderDetailModal" tabindex="-1" aria-labelledby="orderDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderDetailModalLabel">Order Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-4">
                    <div class="col-lg-6">
                        <h4>Invoice</h4>
                        <p><strong>Customer:</strong> <span id="modal_customerName"></span></p>
                        <p><strong>Reference:</strong> <span id="modal_reference"></span></p>
                        <p><strong>Status:</strong> <span id="modal_status"></span></p>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead><tr><th>Product</th><th>Qty</th><th>Price</th><th>Total</th></tr></thead>
                                <tbody id="modal_productsTable"></tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="3" class="text-end">Total:</th>
                                        <th id="modal_subtotal" class="text-nowrap"></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <h4>Communication</h4>
                        <div id="modal_chatMessages" style="height: 400px; overflow-y: auto; padding: 10px; border: 1px solid var(--border-color); border-radius: 8px;">
                            </div>
                        <form id="modal_messageForm" class="mt-3">
                            <div class="input-group">
                                <input type="text" id="modal_messageText" class="form-control" placeholder="Type a message..." required>
                                <button class="btn btn-primary" type="submit">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>