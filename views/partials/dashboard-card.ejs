<div class="col-xl-3 col-md-6 mb-4">
    <div class="card h-100 <%= cardClass || '' %>">
        <div class="card-body">
            <h5 class="card-title"><%= title %></h5>
            <p class="card-text fs-2 fw-bold"><%= value %></p>
            <% if (typeof subtitle !== 'undefined' && subtitle) { %>
                <small class="text-muted"><%= subtitle %></small>
            <% } %>
            <% if (actions && actions.length) { %>
                <div class="mt-2">
                    <% for (var i = 0; i < actions.length; i++) { var action = actions[i]; %>
                        <button class="btn btn-sm <%= action.class %>" <% if (action.onclick) { %>onclick="<%- action.onclick %>"<% } %> >
                            <% if (action.icon) { %><i class="<%= action.icon %>"></i> <% } %><%= action.label %>
                        </button>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>
