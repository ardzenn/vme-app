<div class="table-responsive">
    <table class="table table-hover <%= tableClass || '' %>">
        <thead>
            <tr>
                <% columns.forEach(function(col) { %>
                    <th><%= col.label %></th>
                <% }) %>
            </tr>
        </thead>
        <tbody>
            <% rows.forEach(function(row) { %>
                <tr>
                    <% columns.forEach(function(col) { %>
                        <td><%- row[col.key] %></td>
                    <% }) %>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
