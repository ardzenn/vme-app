<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Plans - VME App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <main class="container-fluid my-5">
        <header class="page-header">
            <div>
                <h1>My Submitted Plans</h1>
                <p class="text-muted">Review your submitted daily and weekly plans.</p>
            </div>
            <div>
                <a href="/planning/daily" class="btn btn-primary">Submit New Daily Plan</a>
                <a href="/planning/weekly" class="btn btn-info text-white">Submit New Weekly Itinerary</a>
            </div>
        </header>

        <ul class="nav nav-tabs mb-3" id="myPlansTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#daily-plans-panel" type="button" role="tab">My Daily Call Plans</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#weekly-itineraries-panel" type="button" role="tab">My Weekly Itineraries</button>
            </li>
        </ul>

        <div class="tab-content" id="myPlansTabContent">
            <div class="tab-pane fade show active" id="daily-plans-panel" role="tabpanel">
                <div class="card card-tab">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Plan Date</th>
                                        <th>First Client Call</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(dailyPlans.length > 0) { %>
                                        <% dailyPlans.forEach(plan => { %>
                                            <tr>
                                                <td><%= new Date(plan.planDate).toLocaleDateString() %></td>
                                                <td><%= plan.firstClientCall %></td>
                                                <td>
                                                    <a href="/planning/daily/<%= plan._id %>" class="btn btn-sm btn-primary">View Details & Comments</a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr><td colspan="3" class="text-center p-5">You have not submitted any daily plans yet.</td></tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="weekly-itineraries-panel" role="tabpanel">
                <div class="card card-tab">
                     <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Week Start Date</th>
                                        <th>Total Target Sales</th>
                                        <th>Total Target Collections</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(weeklyItineraries.length > 0) { %>
                                        <% weeklyItineraries.forEach(itinerary => { %>
                                            <tr>
                                                <td><%= new Date(itinerary.weekStartDate).toLocaleDateString() %></td>
                                                <td>₱<%= (itinerary.totalTargetSales || 0).toLocaleString() %></td>
                                                <td>₱<%= (itinerary.totalTargetCollections || 0).toLocaleString() %></td>
                                                <td>
                                                    <a href="/planning/weekly/<%= itinerary._id %>" class="btn btn-sm btn-primary">View Details & Comments</a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr><td colspan="4" class="text-center p-5">You have not submitted any weekly itineraries yet.</td></tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>